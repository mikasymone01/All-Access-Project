<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:All_Access_Project"
             x:Class="All_Access_Project.Reviews">
    
    <ContentPage.BindingContext>
        <local:ReviewItemViewModel/>
    </ContentPage.BindingContext>


    <StackLayout>
        <ListView x:Name="ReviewList" ItemsSource="{Binding ReviewItems}" IsPullToRefreshEnabled="True" >

            <ListView.ItemTemplate>
                
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                        <Grid>
                            <Label Grid.Column="0" Text="{Binding ReviewRating, StringFormat= 'Rating: {0}/5'}" FontSize="20" Padding="5"/>
                            <Label Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding ReviewText}" FontSize="20" LineBreakMode="NoWrap" />
                        </Grid>
                        </ViewCell.View>
                    </ViewCell>


                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>